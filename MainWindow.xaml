<Window x:Class="FileInteraction.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Interaction" Height="350" Width="500">
    <Grid Background="#f2f2f2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Натисніть, щоб згенерувати числа:" Grid.Row="0" Margin="5"/>
        <Button x:Name="GenerateNumbersButton" Content="Генерувати числа" Grid.Row="0" Margin="5" Padding="5" Click="GenerateNumbersButton_Click" HorizontalAlignment="Right" VerticalAlignment="Center" Background="#007acc" Foreground="White" BorderThickness="0" Cursor="Hand"/>
        <Border Grid.Row="1" Margin="5" Padding="5" Background="White" BorderBrush="#007acc" BorderThickness="1" CornerRadius="5">
            <TextBlock x:Name="StatisticsTextBlock" Margin="5"/>
        </Border>
    </Grid>
</Window>
