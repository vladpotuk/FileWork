<Window x:Class="FileInteraction.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Interaction" Height="350" Width="500">
    <Grid Background="#f2f2f2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Слово для пошуку:" Grid.Row="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="SearchWordTextBox" Grid.Row="0" Margin="5" Padding="5" Width="300" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Label Content="Слово для заміни:" Grid.Row="1" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="ReplaceWordTextBox" Grid.Row="1" Margin="5" Padding="5" Width="300" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Button Content="Замінити слова" Grid.Row="2" Margin="5" Padding="10" Click="ReplaceWordsButton_Click" HorizontalAlignment="Center" Background="#007acc" Foreground="White" BorderThickness="0" Cursor="Hand"/>
        <Border Grid.Row="3" Margin="5" Padding="10" Background="White" BorderBrush="#007acc" BorderThickness="1" CornerRadius="5">
            <TextBlock x:Name="StatisticsTextBlock" Margin="5"/>
        </Border>
    </Grid>
</Window>
