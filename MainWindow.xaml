<Window x:Class="NumberStatsAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Number Stats Analyzer" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="AnalyzeButton" Content="Аналізувати файл" Click="AnalyzeButton_Click" Margin="5"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="10">
            <Label x:Name="PositiveCountLabel" Margin="5"/>
            <Label x:Name="NegativeCountLabel" Margin="5"/>
            <Label x:Name="TwoDigitCountLabel" Margin="5"/>
            <Label x:Name="FiveDigitCountLabel" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
