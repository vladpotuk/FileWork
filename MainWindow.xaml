<Window x:Class="RandomNumbers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Random Numbers" Height="350" Width="500">
    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Генерувати числа" Click="GenerateNumbers_Click" HorizontalAlignment="Center" Margin="5" Padding="10,5" Background="#007ACC" Foreground="White" FontSize="14"/>
        <ListBox x:Name="StatisticsListBox" Grid.Row="1" Margin="5" Background="White" BorderBrush="#007ACC" BorderThickness="1" FontSize="14"/>
    </Grid>
</Window>

